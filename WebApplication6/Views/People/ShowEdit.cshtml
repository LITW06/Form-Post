@model WebApplication6.Models.Person

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <form action="/people/update" method="post">
                <input value="@Model.FirstName" type="text" placeholder="First Name" name="firstName" class="form-control"/>
                <br/>
                <input value="@Model.LastName" type="text" placeholder="Last Name" name="lastName" class="form-control"/>
                <br/>
                <input value="@Model.Age" type="text" placeholder="Age" name="age" class="form-control"/>
                <br/>
                <input type="hidden" name="id" value="@Model.Id"/>
                <button class="btn btn-danger">Update Person</button>
            </form>
        </div>
    </div>
</body>
</html>